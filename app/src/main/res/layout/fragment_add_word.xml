<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="inputOriginal"
            type="app.wordmemo.utils.BindableString"/>
        <variable
            name="inputTranslation"
            type="app.wordmemo.utils.BindableString"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".fragments.AddWordFragment">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:hint="Enter Original"
            app:binding="@{inputOriginal}"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:hint="Enter Translation"
            app:binding="@{inputTranslation}"/>

        <Button
            android:id="@+id/save_word_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Word"/>

    </LinearLayout>

</layout>
